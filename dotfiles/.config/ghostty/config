theme = Gruvbox Dark Hard

font-family = M+1Code Nerd Font
font-size = 12

shell-integration = fish

background-opacity = 1.0
background-blur = false
unfocused-split-opacity = 0.9

window-height = 45
window-width = 190

# reload
keybind = alt+t>r=reload_config

# tab
keybind = alt+t>t=new_tab


# split
keybind = alt+t>s=new_split:down
keybind = alt+t>v=new_split:right
keybind = alt+t>z=toggle_split_zoom
keybind = alt+t>q=close_surface

# split movement
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:up
keybind = alt+down=goto_split:down

